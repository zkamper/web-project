{
  "swagger": "2.0",
  "info": {
    "title": "API Documentation",
    "description": "API documentation for Romanian Traffic Instructor",
    "version": "1.0.0"
  },
  "host": "localhost",
  "schemes": [
    "http"
  ],
  "paths": {
    "/api/laws/{section}": {
      "get": {
        "tags": [
          "laws"
        ],
        "summary": "Get laws by section",
        "description": "Get laws by section",
        "operationId": "getLawsBySection",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "section",
            "in": "path",
            "description": "Section",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Law"
              }
            }
          },
          "404": {
            "description": "Law not found",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/indicatoare/{section}": {
      "get": {
        "tags": [
          "indicatoare"
        ],
        "summary": "Get road signs by section",
        "description": "Get road signs by section",
        "operationId": "getRoadSignsBySection",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "section",
            "in": "path",
            "description": "Section",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/RoadSignsResponse"
            }
          },
          "404": {
            "description": "Road signs not found",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/questions/{id}": {
      "get": {
        "tags": [
          "questions"
        ],
        "summary": "Get question by ID",
        "description": "Returns a question by its ID",
        "operationId": "getQuestionById",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the question",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "object",
              "properties": {
                "count": {
                  "type": "integer",
                  "example": 999
                },
                "id": {
                  "type": "integer",
                  "example": 69
                },
                "title": {
                  "type": "string",
                  "example": "Care dintre următorii factori reprezintă baza conduitei preventive?"
                },
                "answers": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "key": {
                        "type": "integer"
                      },
                      "value": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Question not found",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Question not found"
                }
              }
            }
          },
          "500": {
            "description": "Failed to delete question",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Failed to delete question"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "questions"
        ],
        "summary": "Check answers for a question",
        "description": "Checks the answers provided by the user for a given question",
        "operationId": "checkAnswers",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the question",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Object containing an array of integers representing the answers provided by the user",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "answers": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully checked answers",
            "schema": {
              "type": "object",
              "properties": {
                "isCorrect": {
                  "type": "boolean"
                },
                "answers": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input: answers must be an array of integers",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Invalid input: answers must be an array of integers"
                }
              }
            }
          },
          "500": {
            "description": "Error checking answers",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Error checking answers"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/rss.xml": {
      "get": {
        "tags": [
          "rss"
        ],
        "summary": "Get RSS feed",
        "description": "Returns the RSS feed",
        "operationId": "getRssFeed",
        "produces": [
          "application/xml"
        ],
        "responses": {
          "200": {
            "description": "The RSS feed"
          },
          "500": {
            "description": "Error generating RSS feed",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Error generating RSS feed"
                }
              }
            }
          }
        }
      }
    },
    "/api/search": {
      "get": {
        "tags": [
          "search"
        ],
        "summary": "Search for questions",
        "description": "Search for questions based on a query string",
        "operationId": "searchQuestions",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Search query",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful search",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "example": "716"
                  },
                  "title": {
                    "type": "string",
                    "example": "Ce trebuie să faceți imediat după un accident cu un animal sălbatic?"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Couldn't find your question",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Couldn't find your question"
                }
              }
            }
          },
          "500": {
            "description": "Error occurred while searching",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Error occurred while searching"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    }
  },
  "definitions": {
    "Law": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "section": {
          "type": "string"
        },
        "articles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "__v": {
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "RoadSignsResponse": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "src": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "subtitle": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "score": {
          "type": "number"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  }
}